{
  "name": "Darc",
  "version": "1.0.23",
  "short_name": "Darc",
  "description": "U&A modified Isolated Web App to test the Controlled Frame API.",
  "categories": ["productivity"],
  "lang": ["en"],
  "dir": "ltr",
  "orientation": "landscape",
  "prefer_related_applications": false,
  "icons": [
    {
      "src": "/photon_logo.png",
      "sizes": "any"
    }
  ],
  "display_override": [ "borderless" ],
  "start_url": "/",
  "scope": "/",
  "display": "fullscreen",
  "theme_color": "black",
  "dark_theme_color": "black",
  "background_color": "black",
  "dark_background_color": "black",
  "permissions": ["audioCapture", "window-management", "presentation-api","publickey-credentials-create","publickey-credentials-get"],
  "permissions_policy": {
    "controlled-frame": ["self"],
    "cross-origin-isolated": ["self"],
    "fullscreen": ["self", "*"],
    "microphone": ["self"],
    "camera": ["self"],
    "window-management": ["self"],
    "publickey-credentials-create": ["self"],
    "publickey-credentials-get": ["self"],
    "geolocation": ["self"],
    "clipboard-read": ["self"],
    "clipboard-write": ["self"],
    "payment": ["self"],
    "usb": ["self"],
    "serial": ["self"],
    "hid": ["self"],
    "midi": ["self"],
    "xr-spatial-tracking": ["self"],
    "xr-device-access": ["self"]
  },
  "scope_extensions": [
    { "type": "origin", "origin": "https://example.local" }
  ]
}
